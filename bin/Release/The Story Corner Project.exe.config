<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<connectionStrings>
		<!-- Connection string for the Library System (Windows Authentication) -->
		<add name="LibraryConnectionString"
		     connectionString="Server=(local)\SQLEXPRESS;Database=LibrarySystemDB;Trusted_Connection=True;" />

		<!-- Connection string for the Master database (Windows Authentication) -->
		<add name="MasterConnectionString"
		     connectionString="Server=(local)\SQLEXPRESS;Database=master;Trusted_Connection=True;" />
	</connectionStrings>

	<appSettings>
		<!-- Path to store images -->
		<add key="ImageFolderPath" value="C:\Library-System\People-Images\" />
	</appSettings>
</configuration>
